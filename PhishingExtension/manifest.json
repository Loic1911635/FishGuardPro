{
  "manifest_version": 3,
  "name": "Phishing Link Detector",
  "version": "1.0",
  "description": "Detecte les liens de phishing et alerte l'utilisateur.",
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
