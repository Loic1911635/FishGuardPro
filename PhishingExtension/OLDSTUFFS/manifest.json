{
  "manifest_version": 3,
  "name": "FishGuard Pro",
  "version": "3.0",
  "description": "Professional phishing detection with free public lists. Multilingual support (EN/FR).",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup-pro.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["test-phishing.html", "history.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}